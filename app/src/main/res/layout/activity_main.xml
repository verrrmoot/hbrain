<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background='@color/menu_color'
    tools:context=".MainActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:orientation="horizontal">

        <Button
            android:id="@+id/profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:backgroundTint="@color/purple_500"
            android:padding="6dp"
            android:layout_marginHorizontal="8dp"
            android:text="Профиль"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/sign_out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:backgroundTint="@color/purple_500"
            android:padding="6dp"
            android:layout_marginHorizontal="8dp"
            android:text="Выйти"
            tools:ignore="MissingConstraints" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_go_to_share"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.175"
        android:layout_margin="10dp"
        android:backgroundTint="@color/purple_500"
        android:text="К общим карточкам"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btn_go_cards"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.175"
        android:layout_margin="10dp"
        android:backgroundTint="@color/purple_500"
        android:text="Ежедневные карточки"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btn_go_collections"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.175"
        android:layout_margin="10dp"
        android:backgroundTint="@color/purple_500"
        android:text="Коллекции"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btn_go_play"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.175"
        android:layout_margin="10dp"
        android:backgroundTint="@color/purple_500"
        android:text="Игра"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btn_go_shulte"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.175"
        android:layout_margin="10dp"
        android:backgroundTint="@color/purple_500"
        android:text="Таблица Шульте"
        android:layout_marginBottom="50dp"
        tools:ignore="MissingConstraints" />

</LinearLayout>