<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/menu_color"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginVertical="15dp"
        >
    <EditText
        android:id="@+id/edit_text_front"
        android:layout_width="match_parent"
        android:layout_height="189dp"
        android:layout_weight="0.9"
        android:hint="Лицевая сторона"
        android:padding="10dp"
        android:textColor="@color/purple_500"
        android:background="@drawable/edittext_border"
        />

        <ImageButton
            android:id="@+id/add_image_1"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_add_image"
            android:background="@android:color/transparent"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:contentDescription="TODO" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginVertical="15dp"
        >

    <EditText
        android:id="@+id/edit_text_back"
        android:layout_width="match_parent"
        android:layout_height="178dp"
        android:layout_weight="0.9"
        android:padding="10dp"
        android:hint="Обратная сторона"
        android:textColor="@color/purple_500"
        android:background="@drawable/edittext_border"/>

        <ImageButton
            android:id="@+id/add_image_2"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_add_image"
            android:background="@android:color/transparent"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:contentDescription="TODO" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="3dp"
        android:layout_marginVertical="15dp"
        android:layout_gravity="center_horizontal"
        tools:ignore="MissingConstraints">

        <Button
            android:id="@+id/btn_color_white"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginHorizontal="3dp"
            android:backgroundTint="@color/white"
            android:contentDescription="Выберите цвет"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/btn_color_blue"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginHorizontal="3dp"
            android:backgroundTint="@color/blue"
            android:contentDescription="Выберите цвет"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/btn_color_green"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginHorizontal="3dp"

            android:backgroundTint="@color/green"
            android:contentDescription="Выберите цвет"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/btn_color_red"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginHorizontal="3dp"

            android:backgroundTint="@color/red"
            android:contentDescription="Выберите цвет"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/btn_color_yellow"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginHorizontal="3dp"

            android:backgroundTint="@color/yellow"
            android:contentDescription="Выберите цвет"
            tools:ignore="MissingConstraints" />

    </LinearLayout>

    <Button
        android:id="@+id/button_save_card"
        android:layout_width="wrap_content"
        android:layout_height="79dp"
        android:backgroundTint="@color/purple_500"
        android:text="Сохранить"
        android:layout_gravity="center_horizontal"
        />

</LinearLayout>